<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settingsBlue"
    tools:context=".ui.settings.SettingsFrag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectColorTitle"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <RadioGroup
        android:id="@+id/jairamAryanColorRG"
        android:layout_width="402dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115">

        <RadioButton
            android:id="@+id/jairamAryanRedRB"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="@string/red"
            android:textColor="@color/red" />

        <RadioButton
            android:id="@+id/jairamAryanBlackRB"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="@string/black"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/jairamAryanBlueRB"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="@string/blue"
            android:textColor="@color/blueBlue" />

    </RadioGroup>

    <Button
        android:id="@+id/jairamAryanSaveSettingsBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/saveCAPS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

</androidx.constraintlayout.widget.ConstraintLayout>